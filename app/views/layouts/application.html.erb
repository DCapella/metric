<!DOCTYPE html>
<html>
  <head>
    <title>Metric</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="btn-group" role="group" aria-label="Button Group">
        <%= link_to "Home", root_path, :class => 'btn btn-info' %>
      </div>
      <div class="btn-group" role="group" aria-label="Button Group">
        <%= link_to "About", welcome_about_path, :class => 'btn btn-info' %>
      </div>
      <% if user_signed_in? %>
        <div class="btn-group" role="group" aria-label="Button Group">
          <%= link_to current_user.email, edit_user_registration_path, :class => 'btn btn-info' %>
        </div>
        <div class="btn-group" role="group" aria-label="Button Group">
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'btn btn-info' %>
        </div>
      <% else %>
        <div class="btn-group" role="group" aria-label="Button Group">
          <%= link_to "Sign Up", new_user_registration_path, :class => 'btn btn-info' %>
        </div>
        <div class="btn-group" role="group" aria-label="Button Group">
          <%= link_to "Sign In", new_user_session_path, :class => 'btn btn-info' %>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-warning">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>
      
      <%= yield %>
    </div>
  </body>
</html>
